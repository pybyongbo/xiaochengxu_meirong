.page {
    position: relative;
}


/* 轮播图 */

.swiper {
    width: 100%;
    margin: 0rpx;
}

.swiper image {
    display: inline;
}

.showphone,
.showpop {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    z-index: 111;
}

.showphone {
    right: 50rpx;
    bottom: 120rpx;
}

.showpop {
    right: 50rpx;
    bottom: 220rpx;
}

.showphone image,
.showpop image {
    width: 80rpx;
    height: 80rpx;
    display: block;
    text-align: center;
    margin-top: 8rpx;
}

.case_tit {
    width: 100%;
    margin: 30rpx auto 10rpx;
}

.case_tit image {
    width: 100%;
    height: 120rpx;
    margin: 0rpx;
}

.case_pic {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}

.case_pic view {
    width: 40%;
    margin-left: 2%;
    margin-bottom: 15rpx;
    flex-grow: 1;
}

.case_pic view.even {
    margin-right: 2%;
}

.case_pic view image {
    width: 94%;
    height: 280rpx;
    padding: 3px 5px;
    border: 1px dashed #b8b8b8;
    border-radius: 5px;
}

text.desc {
    display: block;
    text-align: center;
    font-size: 28rpx;
    background: #ff9013;
    color: #fff;
    padding: 12rpx 10rpx;
}

.zhezao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0, 0, 0, 0.4);
    overflow: hidden;
    z-index: 112;
}

.t_w {
    position: relative;
}

.tanchu_view {
    width: 80%;
    margin: 25% auto;
    overflow: hidden;
    background-color: #fff1e6;
    border-radius: 10rpx;
    padding: 4rpx;
}

.bg_view {
    margin: 30rpx auto 30rpx auto;
    color: #fcb712;
    font-size: 50rpx;
    background-color: #fff1e6;
    padding: 0rpx 30rpx;
    text-align: center;
}

.txtys {
    font-size: 32rpx;
    text-align: center;
    margin-bottom: 18rpx;
}

.txtsure {
    height: 100%;
    display: flex;
    justify-content: center;
    margin: 20rpx;
}


/*确定背景*/

.txtsurebg {
    width: 300rpx;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    margin: 50rpx;
    background-color: burlywood;
    flex-direction: column;
}


/*确定图标*/

.txtsureimg {
    display: block;
    width: 120rpx;
    height: 120rpx;
}


/*确定文本*/

.txtsurename {
    margin-bottom: 0rpx;
    color: white;
    font-size: 70rpx;
}


/*右上角图标*/

.t_image {
    position: absolute;
    top: 1%;
    left: 82%;
}


/*右上角图标*/

.t_image1 {
    display: block;
    width: 60rpx;
    height: 60rpx;
}